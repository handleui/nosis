{
  "name": "nosis",
  "private": true,
  "version": "0.3.0",
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=nosis-web --filter=nosis-worker",
    "dev:desktop": "turbo run dev --filter=nosis-desktop",
    "dev:all": "turbo run dev",
    "check-types": "turbo run check-types",
    "check": "turbo run lint",
    "fix": "turbo run fix",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "lefthook": "^2.1.1",
    "turbo": "^2",
    "ultracite": "7.2.2"
  },
  "dependencies": {
    "tw-shimmer": "^0.4.6"
  }
}
